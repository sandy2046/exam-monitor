            <el-descriptions-item label="考试开始">{{ formatTime(startTime) }}</el-descriptions-item>
            <el-descriptions-item label="时间偏差">{{ formatOffset(examStore.examState?.ntpOffset || 0) }}</el-descriptions-item>
            <el-descriptions-item label="最后同步">{{ formatRelativeTime(new Date(examStore.examState?.lastSyncTime || '')) }}</el-descriptions-item>
            <el-descriptions-item label="已完成节点">{{ examStore.examState?.completedNodes.length || 0 }}</el-descriptions-item>
            <el-descriptions-item label="运行时长">{{ runningDuration }}</el-descriptions-item>
          </el-descriptions>
