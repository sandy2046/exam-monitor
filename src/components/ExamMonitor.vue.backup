<template>
  <div class="exam-monitor">
    <el-card class="monitor-card">
      <template #header>
        <div class="card-header">
          <div class="header-left">
            <span class="exam-name">{{ examStore.examState?.templateName }}</span>
            <el-tag :type="statusType" size="small" effect="dark">
              {{ statusText }}
            </el-tag>
          </div>
          <div class="header-right">
            <el-button
              v-if="examStore.isExamRunning"
              type="warning"
              size="small"
              @click="$emit('pause-exam')"
            >
              暂停
            </el-button>
            <el-button
              v-else-if="examStore.isExamPaused"
              type="success"
              size="small"
              @click="$emit('resume-exam')"
            >
              继续
            </el-button>
            <el-button size="small" @click="$emit('skip-node')" :disabled="!canSkip">
              跳过
            </el-button>
            <el-button type="danger" size="small" @click="$emit('end-exam')">
              结束考试
            </el-button>
          </div>
        </div>
      </template>

      <div class="monitor-content">
        <!-- 当前时间显示 - 超大号显示 -->
        <div class="section current-time-display">
          <div class="current-time-content-full">
            <span class="time-value-full">{{ currentTime }}</span>
          </div>
        </div>

        <div class="section current-status">
          <h3>当前状态</h3>
          <div class="status-grid">
            <div class="status-item current-node" :class="{'node-changed': nodeChanged}">
              <div class="label">当前环节</div>
              <div class="value">
                {{ examStore.progress.currentNode?.name || '—' }}
              </div>
            </div>
            <div class="status-item countdown" :class="{'countdown-pulse': countdownPulse, 'countdown-blink': countdownBlink}">
              <div class="label">倒计时</div>
              <div class="value" :class="[countdownClass, {'refreshing': countdownRefresh}]">
                {{ preciseCountdown }}
              </div>
              <div class="sub-text" v-if="examStore.progress.nextNode">
                → {{ examStore.progress.nextNode.name }}
              </div>
            </div>
            <div class="status-item time-sync">
              <div class="label">NTP同步</div>
              <div class="value" :class="syncClass">
                {{ syncStatusText }}
              </div>
            </div>
          </div>

          <div
            v-if="examStore.progress.currentNode?.description"
            class="current-description"
            :class="{'desc-fade-in': nodeChanged}"
          >
            <el-icon><InfoFilled /></el-icon>
            {{ examStore.progress.currentNode.description }}
          </div>
        </div>

        <div class="section next-reminder" v-if="examStore.progress.nextNode">
          <h3>下一提醒</h3>
          <el-alert
            :title="`距离 ${examStore.progress.nextNode.name} 还有 ${formatDuration(examStore.progress.remainingTime)}`"
            type="info"
            :closable="false"
            show-icon
          >
            <template #default>
              <div class="next-details">
                <span v-if="examStore.progress.nextNode.description">
                  {{ examStore.progress.nextNode.description }}
                </span>
              </div>
            </template>
