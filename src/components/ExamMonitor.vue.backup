</template>

<script setup lang="ts">
import { ref, computed, onMounted, onUnmounted } from 'vue'
import { InfoFilled } from '@element-plus/icons-vue'
import { useExamStore } from '@/stores/examStore'
import { useTimeStore } from '@/stores/timeStore'
import { useTemplateStore } from '@/stores/templateStore'
import {
  formatTime,
  formatOffset,
  formatRelativeTime,
  formatDuration,
} from '@/utils/formatter'

const emit = defineEmits(['end-exam', 'pause-exam', 'resume-exam', 'skip-node'])

const examStore = useExamStore()
const timeStore = useTimeStore()
const templateStore = useTemplateStore()

const currentTime = ref(formatTime(new Date()))
let timeInterval: number | null = null
const isDev = import.meta.env.DEV

// 动画状态
const nodeChanged = ref(false)
const countdownPulse = ref(false)
const countdownBlink = ref(false) // 秒数闪烁动画
const countdownRefresh = ref(false) // 倒计时刷新动画
let lastNodeName: string | null = null
let lastRemainingTime: number = -1
let lastSecond: number = -1

const startTime = computed(() => {
  return examStore.examState ? new Date(examStore.examState.startTime) : new Date()
})

const statusType = computed(() => {
  if (examStore.isExamPaused) return 'warning'
  if (examStore.isExamEnded) return 'info'
  if (examStore.isExamRunning) return 'success'
  return 'info'
})

const statusText = computed(() => {
  if (examStore.isExamPaused) return '已暂停'
  if (examStore.isExamEnded) return '已结束'
  if (examStore.isExamRunning) return '进行中'
  return '未知'
})

const countdownClass = computed(() => {
  const seconds = examStore.progress.remainingTime
  if (seconds < 0) return 'text-gray'
  if (seconds <= 60) return 'text-danger'
  if (seconds <= 300) return 'text-warning'
  return 'text-success'
})

const syncClass = computed(() => {
  const status = timeStore.syncStatus.status
  if (status === 'normal') return 'text-success'
  if (status === 'warning') return 'text-warning'
  return 'text-danger'
})

const syncStatusText = computed(() => {
  return timeStore.syncStatus.message
})

const canSkip = computed(() => {
  return examStore.isExamRunning && examStore.progress.currentNode !== null
})

const runningDuration = computed(() => {
  if (!examStore.examState) return '0秒'
  const start = new Date(examStore.examState.startTime)
  const now = new Date()
  const diff = Math.floor((now.getTime() - start.getTime()) / 1000)
  return formatDuration(diff)
})

// 精确倒计时显示（带动画）
const preciseCountdown = computed(() => {
  const seconds = examStore.progress.remainingTime
  return formatCountdownPrecise(seconds)
})

/**
 * 格式化精确倒计时（包含秒）
 * 例如：3分27秒 → 03:27
 */
function formatCountdownPrecise(seconds: number): string {
  if (seconds < 0) return '00:00'

  const mins = Math.floor(seconds / 60)
  const secs = Math.floor(seconds % 60)

  return `${String(mins).padStart(2, '0')}:${String(secs).padStart(2, '0')}`
}

onMounted(() => {
  timeInterval = window.setInterval(() => {
    // 更新当前时间显示
    currentTime.value = formatTime(new Date())

    // 只在考试运行时触发动画
    if (examStore.examState?.status === 'running') {
      // 获取当前进度数据
      const progress = examStore.progress
      const currentRemainingTime = progress.remainingTime

      // 1. 触发倒计时刷新动画（每秒）
      countdownRefresh.value = true
      setTimeout(() => {
        countdownRefresh.value = false
      }, 100)

      // 2. 检测倒计时变化（每秒脉冲）
      if (currentRemainingTime !== lastRemainingTime && currentRemainingTime >= 0) {
        countdownPulse.value = true
        setTimeout(() => {
          countdownPulse.value = false
        }, 300)
      }

      // 3. 检测秒数变化（用于精确动画）
      const currentSecond = Math.floor(currentRemainingTime)
      if (currentSecond !== lastSecond && currentSecond >= 0) {
        countdownBlink.value = true
        setTimeout(() => {
          countdownBlink.value = false
        }, 200)
      }

      // 4. 检测节点切换
      const currentNode = progress.currentNode
      const currentName = currentNode?.name || null
      if (currentName !== lastNodeName && currentName !== null) {
        nodeChanged.value = true
        setTimeout(() => {
          nodeChanged.value = false
        }, 800)
      }

      // 更新上次记录的值
      lastRemainingTime = currentRemainingTime
      lastSecond = currentSecond
      lastNodeName = currentName
    }
  }, 1000)
})

onUnmounted(() => {
  if (timeInterval) {
    clearInterval(timeInterval)
    timeInterval = null
  }
})
</script>

